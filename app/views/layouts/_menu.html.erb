<div class="col-12 menu-container">
  <label for="show-menu" class="show-menu">Toggle Menu</label>
  <input type="checkbox" id="show-menu" role="button">
  <ul class="menu">
    <% if user_signed_in? %>
      <li> <%= link_to '<i class="fa fa-home"></i> Home'.html_safe, root_url %> </li>
      <li>
        <a href="#"><i class="fa fa-book"></i> Journal <i class="fa fa-chevron-down"></i></a>
        <ul class="hidden">
          <li> <%= link_to '<i class="fa fa-cutlery"></i> Log A Food'.html_safe, new_entry_path %> </li>
          <li> <%= link_to '<i class="fa fa-calendar"></i> View Journal'.html_safe, journals_path %> </li>
        </ul>
      </li>
      <li>
        <a href="#"><i class="fa fa-user"></i> User <i class="fa fa-chevron-down"></i></a>
        <ul class="hidden">
          <li><%= link_to '<i class="fa fa-user"></i> Profile'.html_safe, edit_user_registration_path %></li>
          <li><%= link_to '<i class="fa fa-sign-out"></i> Logout'.html_safe, destroy_user_session_path, method: :delete  %></li>
        </ul>
      </li>

    <% else %>
      <li><%= link_to '<i class="fa fa-user-plus"></i> Sign up'.html_safe, new_user_registration_path  %></li>
      <li><%= link_to '<i class="fa fa-sign-in"></i> Login'.html_safe, new_user_session_path  %></li>
    <% end %>
  </ul>
</div>
